#!/bin/env bash
# git switch
gsw() {
  if [[ -n $1 ]]; then
    git switch "$1"
  else
    git branch | fzf | xargs -I_ git switch _
  fi
}

# git switch remote
gswr() {
  git branch -a | fzf | awk -F "/" '{print $NF}' | xargs -I_ git switch _
}

# git pull
gp() {
  if [[ $# -eq 0 ]]; then
    git pull --all -p --rebase
  else
    git branch | fzf | awk '{ print $2 }' | xargs -I_ git pull origin _ -p --rebase
  fi
}

ga() {
  local files=$(git status --porcelain | awk '{print $2}' | fzf -m)
  echo "$files" | xargs git add
}

# git push
gpsh() {
  local selected_branch=$(git branch | fzf | sed 's/^[* ]*//')
  git push origin "$selected_branch"
}

gpshc() {
  local selected_branch=$(git branch --show-current)
  git push origin "$selected_branch"
}

gd() {
  git status --short | awk '{ print $2 }' | fzf --preview 'git diff --color=always {}' --preview-window right:80%
}

